/**index.wxss**/
.container{position: relative}
page{background-color: #f5f5f5}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
  background-color: #f99f5e;
}

.userinfo-avatar {
  width: 4.3rem;
  height: 4.3rem;
  border-radius: 50%;
}
.userinfo-border{
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 4.5rem;
  height: 4.5rem;
  border-radius: 50%;  
  background-color: #fff; 
}
.userinfo-nickname {
  color: #fff;
  margin-top: 0.5rem;
  font-size: 14px;
}
.usermotto {
  margin-top: 200px;
}
.loading{
  font-size: 14px;
}
.tipsList {}
.tipsList ul{display: block}
.tipsList .wx-col{display: inline-block;width: 100%;align-items: center;margin: 0.5rem 0;line-height: 2 .5rem;text-indent: 5px;background-color: #fff;padding: 0.8rem 0;color: #777; }
.tipsList .wx-col:first-child{margin: 0}
.tipsList .wx-col:last-child{margin: 0}
.showmore{float: right;height: 100%; display: inline-block;margin-top: 0.05rem;margin-right: 0.3rem;color: #777 !important;}
.container .wx-setting{position: absolute;right: 0.5rem;top: 0.5rem;}