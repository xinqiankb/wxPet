.petSetting{padding: 0 10px}
.petSetting .petInfo{text-align: left}
.petSetting .petImg{width: 4rem; height: 4rem;border-radius: 50%;display: inline-block}
.petSetting .petImg image{width: 100%; height: 100%;border-radius: 50%}
.petSetting .petLevel{padding-left: 0.5rem;margin-top: 0.6rem;width: 10rem;display: inline-block;vertical-align: top}
.petInfo{position: relative}
.petLevel ul{display: inline-block;width: 100%;align-items: center;justify-content: center}
.petLevel ul li{display: block;width: 100%;text-align: left;font-size: 12px;margin: 0.1rem 0}
.petSetting .info ul{display: inline-block; width: 100%;background-color: #f99f5e;border-radius: 0.5rem;padding: 1rem 0}
.petSetting .info ul li{display: inline-block;width: 90%;height: 1.2rem; line-height: 1.2rem;color: #000;border-radius: 0.5rem;background-color: rgba(255,255,255,0.6);padding: 0.5rem 0px;margin: 0.5rem auto;margin-left: 5%;text-indent: 1rem;}
.petSetting .doBlock{width: 100%;padding: 0 0.5rem;margin-top: 1rem;line-height: 1.5rem;height: 1.5rem;text-align: center}
.btn{display: inline-block;width: 3.5rem;height: 2rem;line-height: 2rem;border-radius: 0.5rem;font-size: 0.8rem;text-align: center;margin-right: 0.5rem;}
.doBlock .goback{border: 1px solid #000;color: #000}
.doBlock .gopk{border: 1px solid #0aca09;background-color: #0aca09;color: #fff}
.doBlock .sure{border: 1px solid #f99f5e; color: #fff;background-color: #f99f5e}
.help{display: inline-block;width: 1.5rem; height: 1.5rem;background-color: #ddd;color: #fff;border-radius: 50%;position: absolute; right: 0;text-align: center;line-height: 1.5rem;top: 0.5rem}

.nameChangeLayout{width: 100%;height: 100%;position: fixed;top: 0;left: 0;background-color: rgba(0,0,0,0.5)}
.namebox{position: absolute;left: 50%;top:50%;margin-left: -7.5rem;margin-top: -4rem;width: 15rem; height: 8rem;background-color: #fff;}
.namebox div{display: block}
.namebox label{display: block;width: 5rem;padding: 0.5rem;}
.namebox input{display: block;margin-left: 0.5rem;border-bottom: 1px solid #000}
.namebox .submitNameBtn{text-align: center;margin-top: 1rem}
.submitNameBtn span{border: 1px solid #0aca09; color: #fff;background-color: #0aca09}
.attrUpdate{position: fixed;top: 0; left: 0;background-color: rgba(0,0,0,0.5);width: 100%;height: 100%;z-index: -1;opacity: 0;}
.showUpdate{z-index: 11 !important;opacity: 1 !important;transition: all 0.5s ease-in-out}
.attrUpdate div{width: 100%;height: 5rem;position: absolute;top: 50%;margin-top: -2.5rem;color: yellow; font-size: 24px;text-align: center;transition: all 0.8s ease-in-out}
.attrUpdate div span{display: block}
.attrUpdate div span:first-child{font-size: 28px}